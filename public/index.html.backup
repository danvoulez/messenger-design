    // ============================================
    // UI UTILITIES
    // ============================================
    
    function showToast(type, title, message, id = null) {
      const container = document.getElementById('toastContainer');
      const toast = document.createElement('div');
      toast.className = `toast ${type}`;
      
      toast.innerHTML = `
        <div class="toast-icon">
          ${type === 'success' ? '✓' : type === 'error' ? '✗' : type === 'warning' ? '⚠' : 'ℹ'}
        </div>
        <div class="toast-content">
          <div class="toast-title">${title}</div>
          <div class="toast-message">${message}</div>
          ${id ? `<div class="toast-id" onclick="copyToClipboard('${id}')">ID: ${id}</div>` : ''}
        </div>
      `;
      
      container.appendChild(toast);
      
      setTimeout(() => {
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 300);
      }, 5000);
    }

    function copyToClipboard(text) {
      navigator.clipboard.writeText(text);
      showToast('success', 'Copied', 'ID copied to clipboard');
    }

    function showModal(title, content) {
      const container = document.getElementById('modalContainer');
      const modal = document.createElement('div');
      modal.className = 'modal-overlay';
      modal.innerHTML = `
        <div class="modal">
          <div class="modal-header">
            <h2 class="modal-title">${title}</h2>
            <button class="modal-close" onclick="this.closest('.modal-overlay').remove()">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <div class="modal-body">${content}</div>
        </div>
      `;
      
      container.appendChild(modal);
      modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.remove();
      });
    }

    // ============================================
    // APPROVAL FLOW
    // ============================================
    
    async function approveCard(card, button) {
      const riskLevel = card.risk_level;
      
      // Handle different risk levels
      if (riskLevel === 'L0' || riskLevel === 'L1' || riskLevel === 'L2') {
        // Simple click approval
        await executeApproval(card);
      } else if (riskLevel === 'L3') {
        // Hold to approve
        await holdToApprove(card, button);
      } else if (riskLevel === 'L4' || riskLevel === 'L5') {
        // WebAuthn step-up
        await webAuthnApproval(card);
      }
    }

    async function executeApproval(card) {
      showToast('info', 'Processing', 'Requesting permit from UBL...');
      
      // Step 1: Request permit
      const permit = await requestPermit(
        card.id,
        card.policy_hash,
        card.subject_hash,
        card.risk_level
      );
      
      if (!permit) return;
      
      showToast('success', 'Permit Granted', `Permit ID: ${permit.permit_id}`, permit.permit_id);
      
      // Step 2: Issue command
      const command = await issueCommand(permit.permit_id, card);
      
      if (!command) return;
      
      showToast('success', 'Command Issued', `Command JTI: ${command.jti}`, command.jti);
      
      // Simulate execution completion after a short delay
      setTimeout(async () => {
        await simulateExecution(command);
      }, 3000);
    }

    async function holdToApprove(card, button) {
      return new Promise((resolve) => {
        let holdTime = 0;
        const requiredHoldTime = 3000; // 3 seconds
        let interval;
        
        button.classList.add('hold-to-approve');
        const progressDiv = document.createElement('div');
        progressDiv.className = 'hold-progress';
        button.insertBefore(progressDiv, button.firstChild);
        
        const textSpan = button.querySelector('.btn-text') || button;
        const originalText = textSpan.textContent;
        
        const startHold = () => {
          textSpan.textContent = 'Hold to Approve...';
          interval = setInterval(() => {
            holdTime += 50;
            const progress = (holdTime / requiredHoldTime) * 100;
            progressDiv.style.width = `${progress}%`;
            
            if (holdTime >= requiredHoldTime) {
              clearInterval(interval);
              textSpan.textContent = 'Approved!';
              button.disabled = true;
              executeApproval(card).then(resolve);
            }
          }, 50);
        };
        
        const stopHold = () => {
          clearInterval(interval);
          holdTime = 0;
          progressDiv.style.width = '0%';
          textSpan.textContent = originalText;
        };
        
        button.addEventListener('mousedown', startHold);
        button.addEventListener('mouseup', stopHold);
        button.addEventListener('mouseleave', stopHold);
      });
    }

    async function webAuthnApproval(card) {
      showModal('WebAuthn Required', `
        <p style="margin-bottom: 16px;">This action requires ${card.risk_level} approval with WebAuthn step-up authentication.</p>
        <div style="text-align: center; margin: 32px 0;">
          <div style="font-size: 48px; margin-bottom: 16px;">🔐</div>
          <p style="color: var(--text-secondary); font-size: 14px;">Touch your security key or authenticate with biometrics</p>
        </div>
        <button class="btn btn-primary" style="width: 100%;" onclick="completeWebAuthn('${card.id}')">
          Authenticate & Approve
        </button>
      `);
    }

    window.completeWebAuthn = async function(cardId) {
      const card = state.cards.find(c => c.id === cardId);
      if (!card) return;
      
      // Simulate WebAuthn
      showToast('info', 'Authenticating', 'Verifying biometrics...');
      
      setTimeout(async () => {
        document.querySelector('.modal-overlay')?.remove();
        showToast('success', 'Authenticated', 'Step-up verification complete');
        await executeApproval(card);
      }, 1500);
    };

    async function simulateExecution(command) {
      // Simulate execution completing
      try {
        const res = await fetch(`${API_BASE}/v1/exec.finish`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            jti: command.jti,
            status: 'success',
            summary: `Successfully executed ${command.jobType} on ${command.target}`,
            logs_hash: `blake3:${Math.random().toString(36).substring(7)}`,
            artifacts: [
              { name: 'build.log', size: 1234, url: '#' },
              { name: 'output.tar.gz', size: 56789, url: '#' }
            ],
            usage: {
              cpu_seconds: 12.5,
              memory_mb: 256,
              disk_mb: 128
            }
          })
        });
        
        const data = await res.json();
        state.receipts.unshift(data.receipt);
        
        showToast('success', 'Execution Complete', 
          `Receipt ID: ${data.receipt.receipt_id}`, 
          data.receipt.receipt_id
        );
        
        // Add result card to messages
        addResultCardToChat(data.receipt, command);
      } catch (error) {
        console.error('Failed to finish execution:', error);
      }
    }

