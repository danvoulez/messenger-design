  <script>
    // ============================================
    // UBL CONSOLE APPLICATION
    // ============================================
    
    const API_BASE = window.location.hostname === 'localhost' ? 'http://localhost:3000/api' : '/api';
    
    // State Management
    const state = {
      currentView: 'chat',
      adminActive: false,
      adminTTL: 300,
      currentTenant: 'T.UBL',
      currentTarget: 'LAB_512',
      participants: [],
      cards: [],
      commands: [],
      receipts: [],
      allowlist: []
    };

    // ============================================
    // API CALLS
    // ============================================
    
    async function fetchParticipants() {
      try {
        const res = await fetch(`${API_BASE}/v1/participants?tenant=${state.currentTenant}`);
        const data = await res.json();
        state.participants = data.participants;
        return data.participants;
      } catch (error) {
        console.error('Failed to fetch participants:', error);
        showToast('error', 'Error', 'Failed to load participants');
        return [];
      }
    }

    async function proposeCard(cardData) {
      try {
        const res = await fetch(`${API_BASE}/v1/cards/propose`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            ...cardData,
            tenant_id: state.currentTenant,
            proposed_by: 'U.001'
          })
        });
        const data = await res.json();
        state.cards.push(data.card);
        return data.card;
      } catch (error) {
        console.error('Failed to propose card:', error);
        showToast('error', 'Error', 'Failed to propose action');
        return null;
      }
    }

    async function requestPermit(cardId, policyHash, subjectHash, riskLevel) {
      try {
        const res = await fetch(`${API_BASE}/v1/policy/permit`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            card_id: cardId,
            actor: 'U.001',
            policy_hash: policyHash,
            subject_hash: subjectHash,
            risk_level: riskLevel
          })
        });
        const data = await res.json();
        return data.permit;
      } catch (error) {
        console.error('Failed to request permit:', error);
        showToast('error', 'Error', 'Failed to get permit from UBL');
        return null;
      }
    }

    async function issueCommand(permitId, card) {
      try {
        const res = await fetch(`${API_BASE}/v1/commands/issue`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            permit_id: permitId,
            card_id: card.id,
            jobType: card.jobType,
            target: card.target,
            params: card.params,
            actor: 'U.001'
          })
        });
        const data = await res.json();
        state.commands.push(data.command);
        return data.command;
      } catch (error) {
        console.error('Failed to issue command:', error);
        showToast('error', 'Error', 'Failed to issue command');
        return null;
      }
    }

    async function fetchPendingCommands() {
      try {
        const res = await fetch(`${API_BASE}/v1/query/commands?pending=1&tenant=${state.currentTenant}`);
        const data = await res.json();
        state.commands = data.commands;
        return data.commands;
      } catch (error) {
        console.error('Failed to fetch pending commands:', error);
        return [];
      }
    }

    async function fetchReceipts() {
      try {
        const res = await fetch(`${API_BASE}/v1/receipts?tenant=${state.currentTenant}&limit=50`);
        const data = await res.json();
        state.receipts = data.receipts;
        return data.receipts;
