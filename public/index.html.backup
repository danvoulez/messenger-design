              ${receipt.artifacts.map(a => `
                <div class="artifact-item">
                  📦 ${a.name} <span style="margin-left: auto; color: var(--text-tertiary);">${(a.size / 1024).toFixed(1)} KB</span>
                </div>
              `).join('')}
            </div>
          ` : ''}
          
          ${receipt.usage ? `
            <div style="margin-top: 16px; font-size: 12px; color: var(--text-secondary);">
              <strong>Usage:</strong> ${receipt.usage.cpu_seconds}s CPU, ${receipt.usage.memory_mb}MB RAM, ${receipt.usage.disk_mb}MB Disk
            </div>
          ` : ''}
        </div>
      `;
      
      messagesArea.appendChild(messageDiv);
      messagesArea.scrollTop = messagesArea.scrollHeight;
    }

    window.toggleParamsView = function(button, view) {
      const buttons = button.parentElement.querySelectorAll('.toggle-btn');
      buttons.forEach(b => b.classList.remove('active'));
      button.classList.add('active');
      // In a real app, this would switch between summary and JSON views
    };

    // ============================================
    // ADMIN BANNER & TTL
    // ============================================
    
    function activateAdmin() {
      state.adminActive = true;
      state.adminTTL = 300; // 5 minutes
      
      const banner = document.getElementById('adminBanner');
      banner.style.display = 'flex';
      
      // Start TTL countdown
      updateTTL();
      const ttlInterval = setInterval(() => {
        if (state.adminTTL > 0) {
          state.adminTTL--;
          updateTTL();
        } else {
          clearInterval(ttlInterval);
          deactivateAdmin();
        }
      }, 1000);
      
      showToast('success', 'Admin Active', 'Admin mode activated for 5 minutes');
    }

    function updateTTL() {
      const minutes = Math.floor(state.adminTTL / 60);
      const seconds = state.adminTTL % 60;
      const ttlElement = document.getElementById('ttlTime');
      ttlElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
      
      const countdown = document.getElementById('ttlCountdown');
      if (state.adminTTL < 60) {
        countdown.classList.add('warning');
      } else {
        countdown.classList.remove('warning');
      }
    }

    function deactivateAdmin() {
      state.adminActive = false;
      const banner = document.getElementById('adminBanner');
      banner.style.display = 'none';
      showToast('warning', 'Admin Expired', 'Admin mode has expired');
    }

    // ============================================
    // KEYBOARD SHORTCUTS
    // ============================================
    
    document.addEventListener('keydown', (e) => {
      // A - Approve (if approval card is visible)
      if (e.key === 'a' && !e.ctrlKey && !e.metaKey) {
        const approveBtn = document.querySelector('.approval-card .btn-primary');
        if (approveBtn && document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA') {
          approveBtn.click();
        }
      }
      
      // V - View JSON
      if (e.key === 'v' && !e.ctrlKey && !e.metaKey) {
        const jsonBtn = document.querySelector('.approval-card .btn-secondary');
        if (jsonBtn && document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA') {
          jsonBtn.click();
        }
      }
      
      // Escape - Close modal
      if (e.key === 'Escape') {
        document.querySelector('.modal-overlay')?.remove();
      }
    });

    // ============================================
    // INITIALIZATION
    // ============================================
    
    async function init() {
      console.log('🚀 Initializing UBL Console...');
      
      // Load initial data
      await fetchParticipants();
      await fetchAllowlist();
      
      // Activate admin mode (for demo)
      setTimeout(() => activateAdmin(), 1000);
      
      // Demo: Create a sample approval card after 2 seconds
      setTimeout(async () => {
        const card = await proposeCard({
          jobType: 'deploy.staging',
          target: 'LAB_512',
          params: {
            branch: 'main',
            environment: 'staging',
            auto_rollback: true
          },
          risk_level: 'L3'
        });
        
        if (card) {
          addApprovalCardToChat(card);
        }
      }, 2000);
      
      console.log('✓ UBL Console initialized');
    }

    // Auto-resize textarea
    const textarea = document.querySelector('.input-field');
    textarea.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = Math.min(this.scrollHeight, 120) + 'px';
    });

    // Conversation click handling
    document.querySelectorAll('.conversation-item').forEach(item => {
      item.addEventListener('click', function() {
        document.querySelectorAll('.conversation-item').forEach(i => i.classList.remove('active'));
        this.classList.add('active');
      });
    });

    // Send button state
    textarea.addEventListener('input', function() {
      const sendBtn = document.querySelector('.send-btn');
      sendBtn.disabled = this.value.trim() === '';
    });

    // Initialize send button as disabled
    document.querySelector('.send-btn').disabled = true;
    
    // Start the application
    init();
  </script>
</body>
</html>
